{
  "name": "swarm-desktop",
  "version": "0.1.0",
  "description": "Desktop GUI for swarm-cli - DAG creation, pipeline management, and agent monitoring",
  "type": "module",
  "main": "dist/main/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:electron": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json",
    "electron:dev": "npm run build:electron && npx electron .",
    "preview": "vite preview",
    "start": "npm run build && npm run build:electron && npx electron .",
    "package": "npm run build && npm run build:electron && electron-builder",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.main.json --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "generate-icons": "node scripts/generate-icons.js"
  },
  "keywords": [
    "electron",
    "swarm",
    "dag",
    "pipeline",
    "ai-agents"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.20",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.20.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^16.0.0",
    "jsdom": "^28.0.0",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.5.2",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.1.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/dagre": "^0.7.53",
    "@types/js-yaml": "^4.0.9",
    "@types/marked": "^5.0.2",
    "@xyflow/react": "^12.10.0",
    "chokidar": "^5.0.0",
    "dagre": "^0.8.5",
    "html-to-image": "^1.11.13",
    "js-yaml": "^4.1.1",
    "marked": "^17.0.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "build": {
    "appId": "com.swarm.desktop",
    "productName": "Swarm Desktop",
    "icon": "build/icon",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icons"
    }
  }
}
