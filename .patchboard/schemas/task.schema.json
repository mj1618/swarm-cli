{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "patchboard task frontmatter",
  "type": "object",
  "required": [
    "id",
    "title",
    "type",
    "status",
    "priority",
    "labels",
    "depends_on",
    "acceptance",
    "created_at",
    "updated_at"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^(T|E)-\\d{4}$"
    },
    "title": {
      "type": "string",
      "minLength": 3
    },
    "type": {
      "type": "string",
      "enum": [
        "task",
        "bug",
        "chore",
        "epic"
      ]
    },
    "status": {
      "type": "string",
      "enum": [
        "todo",
        "ready",
        "in_progress",
        "blocked",
        "review",
        "done"
      ]
    },
    "priority": {
      "type": "string",
      "enum": [
        "P0",
        "P1",
        "P2",
        "P3"
      ]
    },
    "owner": {
      "type": [
        "string",
        "null"
      ]
    },
    "labels": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "depends_on": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^(T|E)-\\d{4}$"
      }
    },
    "parallel_with": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^(T|E)-\\d{4}$"
      }
    },
    "children": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^(T|E)-\\d{4}$"
      },
      "description": "List of child task IDs for epics"
    },
    "parent_epic": {
      "type": ["string", "null"],
      "pattern": "^(T|E)-\\d{4}$",
      "description": "Parent epic ID for tasks that belong to an epic"
    },
    "acceptance": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "created_at": {
      "type": "string"
    },
    "updated_at": {
      "type": "string"
    }
  },
  "additionalProperties": true
}
